{
    "builders":[{
        "type": "docker",
        "image": "ubuntu",
        "commit": true,
        "run_command": ["-d", "-i", "-t", "--net=host", "{{.Image}}", "/bin/bash"]
    }],
    "provisioners":[
        {
            "type": "file",
            "source": "/etc/apt/apt.conf.d/01proxy",
            "destination": "/etc/apt/apt.conf.d/01proxy"
        },
        {
            "type": "file",
            "source": "/etc/environment",
            "destination": "/etc/environment"
        },
        {
            "type": "shell",
            "inline": [ "mkdir /usr/local/scape" ]
        },
        {
        "type": "file",
        "source": "/vagrant/.provision/fedora4/fcrepo-scape-0.0.1.war",
        "destination": "/usr/local/scape/fcrepo.war"
        },
        {
            "type": "shell",
            "inline": [
                "export http_proxy=`grep HTTP_PROXY /etc/environment| tr -s -d \"HTTP_PROXY=\" \"\n\"`",
                "export https_proxy=`grep HTTPS_PROXY /etc/environment| tr -s -d \"HTTP_PROXY=\" \"\n\"`",
                "export ftp_proxy=`grep FTP_PROXY /etc/environment| tr -s -d \"HTTP_PROXY=\" \"\n\"`"
            ]
        },
        {
            "type": "shell",
            "inline": [
                "apt-get -y update",
                "apt-get install -y python-pip python-dev",
                "pip install ansible"
            ]
        },
        {
            "type": "ansible-local",
            "playbook_file": "/vagrant/.provision/fedora4/play.yaml",
            "inventory_file": "/vagrant/.provision/ansible_inventory"
        }
    ],
    "post-processors": [
        {
            "type": "docker-tag",
            "repository": "fedora4",
            "tag": "basic-fedora-war-served"
        }
    ]
}
